@model YouInvestMe.Models.Product

@{
    ViewData["Title"] = "Create";
}


<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <h1>Create</h1>

        <h4>Product</h4>
        <hr />
